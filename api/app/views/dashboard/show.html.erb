<% content_for :title, "Dashboard" %>

<div class="space-y-4">
  <%= render(CardComponent.new(
    title: "API is in Beta",
    
    color: :amber
  )) do %>
    <p class="text-gray-600">The Beta API might have issues, bugs, and imperfections. We welcome any feedback in our official Helium Discord channel.</p>
  <% end %>

  <%= render(CardComponent.new(title: "Getting Started")) do %>
    <p class="text-gray-600 mb-6">Welcome to the Relay GraphQL API for Helium Oracle data! This API allows you to easily query information about any Helium hotspot, including essential details, earnings, and historical data.</p>

    <h3 class="text-lg font-semibold mb-4">Start using the API in 3 easy steps:</h3>
    <ol class="list-decimal list-inside space-y-2 mb-6">
      <li>Copy your API key</li>
      <li>Use the desired endpoint for the data you're looking to access (see docs for all endpoints)</li>
      <li>Request data via any standard API interface like Zapier. We recommend using x service for best results</li>
    </ol>

    <div class="flex gap-4">
      <%= render(ButtonComponent.new(
        text: "Read Docs",
        style: :secondary,
        href: "https://docs.relaywireless.com",
        target: "_blank"
      )) %>
      <%= render(ButtonComponent.new(
        text: "Join Relay Discord",
        style: :secondary,
        href: "https://discord.gg/relay",
        target: "_blank"
      )) %>
    </div>
  <% end %>

  <%= render(CardComponent.new(title: "API Key")) do %>
    <p class="text-gray-600 mb-4">This is your API key for accessing the GraphQL API.</p>
    <%= render(CopiableTextComponent.new(text: current_user.api_key)) %>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <%= render(CardComponent.new(title: "Plan")) do %>
      <%= render(PlanDetailsComponent.new(plan: current_user.plan)) %>
    <% end %>

    <%= render(CardComponent.new(title: "Usage")) do %>
      <%= render(PlanUsageComponent.new(user: current_user)) %>
    <% end %>
  </div>
</div> 
