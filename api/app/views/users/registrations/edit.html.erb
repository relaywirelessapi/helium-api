<% content_for :title, "Account Settings" %>

<div class="space-y-4">
  <%= render(CardComponent.new(title: "Account Information")) do %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "account-information-form" }) do |f| %>
      <div class="space-y-6">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="-mt-4 text-sm/6 text-gray-500">Currently awaiting confirmation for: <strong><%= resource.unconfirmed_email %></strong></p>
        <% end %>

        <%= f.input :current_password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
                    
        <%= render(ButtonComponent.new(text: "Save Changes", style: :primary, type: "submit")) %>
      </div>
    <% end %>
  <% end %>

  <%= render(CardComponent.new(title: "Security")) do %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "security-form" }) do |f| %>
      <div class="space-y-6">
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>

        <%= render(ButtonComponent.new(text: "Update Password", style: :primary, type: "submit")) %>
      </div>
    <% end %>
  <% end %>

  <%= render(CardComponent.new(title: "Log Out")) do %>
    <%= button_to destroy_user_session_path, method: :delete do %>
      <%= render(ButtonComponent.new(text: "Log out", style: :secondary)) %>
    <% end %>
  <% end %>
</div>
