<% content_for :title, "Join" %>

<%= render(FormContainerComponent.new(title: "Join Relay API")) do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="space-y-6">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>

      <%= render(ButtonComponent.new(text: "Create account", style: :primary, type: "submit", full_width: true)) %>
    </div>
  <% end %>

  <p class="mt-6 text-center text-sm/6 text-gray-500">
    Already have an account?
    <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold hover:text-primary transition-colors" %>
  </p>
<% end %>
