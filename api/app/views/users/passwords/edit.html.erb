<% content_for :title, "Change Password" %>

<%= render(FormContainerComponent.new(title: "Reset your password")) do %>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="space-y-6">
      <%= f.input :password,
                  label: "New password",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :password_confirmation,
                  label: "Confirm your new password",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>

      <%= render(ButtonComponent.new(text: "Change my password", style: :primary, type: "submit", full_width: true)) %>
    </div>
  <% end %>

  <p class="mt-10 text-center text-sm/6 text-gray-500">
    Remember your password?
    <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold hover:text-primary transition-colors" %>
  </p>
<% end %>
