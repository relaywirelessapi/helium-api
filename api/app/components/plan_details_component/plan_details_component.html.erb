<div>
  <h2 class="text-3xl font-bold mb-2"><%= plan_name %></h2>
  <p class="text-gray-600 mb-6"><%= plan_description %></p>

  <h3 class="text-lg font-semibold mb-4">Your plan includes:</h3>
  <ul class="space-y-2">
    <% features.each do |feature| %>
      <li class="flex items-center gap-2">
        <svg class="w-5 h-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
        <span><%= feature %></span>
      </li>
    <% end %>
  </ul>
</div> 
