<%= render CardComponent.new do %>
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-1">
      <h2 class="text-2xl"><%= plan.name %> Plan</h2>
      <%= render BadgeComponent.new(variant: :blue) do %>
        <%= formatted_price %>
      <% end %>
    </div>
    <% if plan.price_per_month.present? && !plan.free? %>
      <div class="text-xs text-gray-500 mb-4">billed monthly</div>
    <% end %>
    <p class="text-gray-600 text-lg"><%= plan.description %></p>
  </div>

  <div>
    <div class="space-y-4">
      <% plan.features.each do |feature| %>
        <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
          <div class="flex-shrink-0 mt-1">
            <%= render IconComponent.new(name: :check, color: :green) %>
          </div>
          <div class="flex-1">
            <h4 class="font-medium text-gray-900 mb-1"><%= feature.name %></h4>
            <p class="text-gray-600 text-sm"><%= feature.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 
