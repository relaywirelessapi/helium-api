<% classes = class_names(
  "inline-flex items-center justify-center rounded-3xl font-semibold focus:outline-none focus:ring-2 focus:ring-offset-2 cursor-pointer",
  "w-full" => @full_width,
  "px-3 py-2 text-sm" => @size == :s,
  "px-4 py-3 text-base" => @size == :m,
  "px-6 py-4 text-lg" => @size == :l,
  "bg-blue-600 hover:bg-blue-700 focus:ring-blue-500 text-white" => @style == :primary,
  "bg-white hover:bg-gray-50 focus:ring-gray-500 text-gray-700 border border-gray-300" => @style == :secondary,
  "bg-red-600 hover:bg-red-700 focus:ring-red-500 text-white" => @style == :danger,
  "bg-green-600 hover:bg-green-700 focus:ring-green-500 text-white" => @style == :success,
) %> 

<% if @href %>
  <%= link_to(
    @text,
    @href,
    class: classes,
    **@options
  ) %>
<% else %>
  <%= button_tag(
    @text,
    class: classes,
    **@options
  ) %>
<% end %> 
