<%# The main navigation bar container %>
<nav class="bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <%# Logo section %>
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center gap-2 hover:text-primary transition-colors" do %>
          <%= image_tag "logo.svg", class: "h-8 w-8", alt: "Relay API" %>
          <span class="text-lg font-semibold">Relay API</span>
        <% end %>
      </div>

      <%# Navigation links %>
      <div class="flex items-center gap-2.5">
        <% links.each do |link| %>
          <%= link_to(
            link[:path],
            class: class_names(
              "flex items-center text-sm transition-colors rounded p-2.5 font-medium",
              "bg-[#0039FF0F] text-[#0039FF]" => current_page?(link[:path]),
              "text-gray-600 hover:text-gray-900" => !current_page?(link[:path])
            ),
            **link.slice(:data, :target)
          ) do %>
            <%= link[:name] %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
